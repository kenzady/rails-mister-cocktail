    <p>Better cocktails for a better place</p>
    </div>
  </div>

  <div class="container">

    <h2 class="text-center">What cocktail do you want?</h2>

    <div class="cards">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>)">
                <span class="card-name"><h3><%= cocktail.name.upcase %></h3></span>
                <%= link_to "", cocktail_path(cocktail), class: "card-click" %>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>

    <span class="add_button"><i class="fa fa-plus" aria-hidden="true"></i><%= link_to " Create a new cocktail!", new_cocktail_path, class: "add_button" %></span>

  </div>


